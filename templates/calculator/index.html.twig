{% extends 'base.html.twig' %}

{% block title %}VAT Calculator{% endblock %}

{% block body %}

<section>
	<div class="switch">
		<input type="checkbox" id="type_switcher">
		<span class="selection bg-success"></span>
		<label for="type_switcher">Country rate</label>
		<label for="type_switcher">Custom rate</label> 
	</div>
</section>
<div class="form-wrapper">
	{{ form_start(form) }}
		{{ form_widget(form) }}
		<div class="form_bottom">
			<div class="alert alert-danger visually-hidden" role="alert">Please, fill all the fields.</div>
			<div>
				<button type="submit" class="btn btn-success clc-sbm" id="vat_added">Add VAT</button>
				<button type="submit" class="btn btn-danger clc-sbm" id="vat_removed">Remove VAT</button>
			</div>
		</div>
	{{ form_end(form) }}
</div>
<div class="history-wrapper">
	{% include 'calculator/history.html.twig' %}
</div>
{% endblock %}
